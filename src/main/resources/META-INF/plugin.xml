<idea-plugin>
    <id>com.gitai.webstorm.integration</id>
    <name>Git AI Integration</name>
    <vendor email="support@gitai.com" url="https://usegitai.com">rdb-platform</vendor>

    <description><![CDATA[
    INTELLIGENT AUTOSAVE & TRACKING FOR AI-ASSISTED CODING
    
    Git AI automatically tracks your code changes, attributing them correctly to either you or your AI assistants (like AWS Q). 
    It ensures your commit history accurately reflects who wrote what, providing a seamless and transparent development experience.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <projectService serviceImplementation="com.gitai.GitAiService"/>
        <applicationService serviceImplementation="com.gitai.AwsQDetector"/>
        <applicationService serviceImplementation="com.gitai.CheckpointManager"/>
        <postStartupActivity implementation="com.gitai.AwsQStartupActivity"/>
    </extensions>

    <applicationListeners>
        <listener class="com.gitai.ProbeListener" topic="com.intellij.openapi.command.CommandListener"/>
        <listener class="com.gitai.ProbeBulkFileListener" topic="com.intellij.openapi.vfs.newvfs.BulkFileListener"/>
        <listener class="com.gitai.HumanActivityListener" topic="com.intellij.openapi.command.CommandListener"/>
    </applicationListeners>
</idea-plugin>
